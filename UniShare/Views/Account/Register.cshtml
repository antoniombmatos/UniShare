@model UniShare.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registar";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                    <h2 class="card-title mb-2">Registar no UniShare</h2>
                    <p class="text-muted">Crie a sua conta para começar</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="FullName" class="form-control" placeholder="Nome completo" />
                                <label asp-for="FullName"></label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="StudentNumber" class="form-control" placeholder="Número de aluno" />
                                <label asp-for="StudentNumber"></label>
                                <span asp-validation-for="StudentNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="nome@exemplo.com" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses">
                            <option value="">Selecione o seu curso</option>
                        </select>
                        <label asp-for="CourseId"></label>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                    
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control" placeholder="Password" />
                                <label asp-for="Password"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar password" />
                                <label asp-for="ConfirmPassword"></label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Criar Conta
                        </button>
                    </div>
                </form>

                <hr class="my-4">
                
                <div class="text-center">
                    <p class="mb-0">Já tem conta?</p>
                    <a asp-action="Login" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}